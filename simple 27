        reasons.append("Passive assets â‰¥ 50%")
    if not reasons:
        reasons.append("Foreign but below thresholds")
    return "; ".join(reasons)

df["Reason"] = df.apply(reason, axis=1)

# === DISPLAY RESULTS ===
