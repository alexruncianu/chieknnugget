    plt.plot(sub_df['CoB'], sub_df['DailyPL'], marker='o', label=book_name)

plt.title('Daily PnL by Book', fontsize=14)
plt.xlabel('Date (CoB)')
plt.ylabel('Daily PnL')
plt.legend()
plt.grid(True)
plt.show()

